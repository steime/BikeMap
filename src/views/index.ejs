<!DOCTYPE html>
<html>
<head>
  <title>CC Bikers</title>
  <!-- Add Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
  <!-- Add your custom CSS -->
  <link rel="stylesheet" href="../css/styles.css" />
</head>
<body>
    <h1>Clickable Map</h1>
  <div id="map"></div>
  <!-- Include the separate JavaScript file -->
  <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
  <script>
    function initializeMap() {
      const map = L.map('map').setView([51.505, -0.09], 13);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a>',
      }).addTo(map);

      const locations = [
        { name: "Location 1", latlng: [51.505, -0.09] },
        { name: "Location 2", latlng: [51.51, -0.1] },
      ];

      locations.forEach((loc) => {
        const marker = L.marker(loc.latlng).addTo(map);
        marker.bindPopup(`<b>${loc.name}</b><br>Coordinates: ${loc.latlng}`).openPopup();
      });
    }

    document.addEventListener("DOMContentLoaded", initializeMap);
  </script>
  <div>Work?</div>
</body>
</html>
